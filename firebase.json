{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/.well-known/apple-app-site-association",
        "headers": [
          {"key": "Content-Type", "value": "application/json"}
        ]
      },
      {
        "source": "/offers/*.json",
        "headers": [
          {"key": "Content-Type", "value": "application/json"}
        ]
      }
    ]
  }
}
